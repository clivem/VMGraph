<configuration debug="false">

  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <Target>System.out</Target>
    <encoder>
      <pattern>%d [%thread] %-5level %logger{0}:%L - %message%n</pattern>
    </encoder>
  </appender>
  
  <!-- appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>${LOG_DIR:-/var/log/snmpmon}/SnmpGetStatsService.log</file>
    <encoder>
      <pattern>%d [%thread] %-5level %logger{10}:%L - %msg%n</pattern>
    </encoder>
  </appender -->
  
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_DIR:-/var/log/snmpmon}/SnmpGetStatsService.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>${LOG_DIR:-/var/log/snmpmon}/SnmpGetStatsService.%i.log.gz</fileNamePattern>
      <minIndex>1</minIndex>
      <maxIndex>3</maxIndex>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <maxFileSize>10MB</maxFileSize>
    </triggeringPolicy>
    <encoder>
      <pattern>%d [%thread] %-5level %logger{10}:%L - %message%n</pattern>
    </encoder>
  </appender>
  
  <root level="${LOG_LVL:-INFO}">
    <appender-ref ref="stdout"/>
    <appender-ref ref="FILE"/>
  </root>

</configuration>
